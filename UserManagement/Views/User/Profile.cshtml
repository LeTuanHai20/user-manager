@model ProfileViewModel
@{
    ViewData["Title"] = "Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Your fullname: @Model.FullName</h1>
<ul class="list-group">
    <li class="list-group-item">Your email:  @Model.Email</li>
    <li class="list-group-item">Enable: @Model.Enable</li>
    <li class="list-group-item"><a class="btn btn-primary mb-3" asp-controller="User" asp-action="EditProfile" asp-route-id="@ViewBag.userId">Setting</a></li>
    <li class="list-group-item"><a class="btn btn-primary mb-3" asp-controller="User" asp-action="ConfirmOldPassword" asp-route-id ="@ViewBag.userId">Change password</a></li>
</ul>


