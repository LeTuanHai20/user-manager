@model EditUserViewModel
@{
    ViewData["Title"] = "EditProfile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>Edit Profile</h1>
<form asp-action="EditProfile" method="post">
    <div class="text-danger" asp-validation-summary="All"></div>
    <input asp-for="ID" hidden class="form-control" />
    <div class="form-group">
        <label asp-for="Email"></label>
        <input class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter Email" asp-for="Email">
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="FullName"></label>
        <input class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Full name" asp-for="FullName">
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Enable"></label>
        <select class="custom-select" id="inputGroupSelect03" asp-for="Enable">
            <option value="true" selected>True</option>
            <option value="false">False</option>
        </select>
        <span asp-validation-for="Enable" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
    <a asp-action="Profile" class="btn btn-primary ">Cancel</a>
</form>



