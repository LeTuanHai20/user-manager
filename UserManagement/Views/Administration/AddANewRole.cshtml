@model AddRoleViewModel
@{
    ViewData["Title"] = "Add A New Role";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add A New Role</h2>

<form method="post" asp-action="AddANewRole" asp-controller="Administration">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="RoleName"></label>
        <input type="text" class="form-control" placeholder="Role Name" asp-for="RoleName">
        <span asp-validation-for="RoleName" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Add a new role</button>
</form>


