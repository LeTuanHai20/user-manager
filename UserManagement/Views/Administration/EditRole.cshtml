@model EditRoleViewModel
@{
    ViewData["Title"] = "Edit Role";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <h1>Edit Role</h1>
<form asp-action="EditRole" asp-controller="administration" method="post">
    <div class="text-danger" asp-validation-summary="All"></div>
    <div class="form-group row">
        <label asp-for="ID" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="ID" disabled class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Name"></label>
        <input class="form-control"  aria-describedby="emailHelp" placeholder="Enter Name" asp-for="Name">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
    <a asp-action="ListRoles"  class="btn btn-primary ">Cancel</a>
</form>

