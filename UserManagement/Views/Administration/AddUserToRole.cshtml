@model AddUserToRoleViewModel
@{
    ViewData["Title"] = "AddUserToRole";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Add User To Role</h1>
<form method="post" asp-action="AddUserToRole" asp-controller="Administration">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input type="text" class="form-control" placeholder="Email" asp-for="Email">
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="RoleName"></label>
        <input type="text" class="form-control" placeholder="Role Name" asp-for="RoleName">
        <span asp-validation-for="RoleName" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Add a new role</button>
</form>
